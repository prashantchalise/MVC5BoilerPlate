@{
    ViewData["Title"] = "Page Error";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] :: RMT-IMS by Rolpo</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!-- Bootstrap 3.3.5 -->

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/css/adminlte.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/lib/icheck/square/blue.css" rel="stylesheet" />
</head>
<body class="hold-transition skin-blue sidebar-mini">

    <!-- Default box -->
    <div class="box">
       
        <div class="box-body">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @ViewData["Title"]
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="error-page">
                    <h2 class="headline text-red">:(</h2>
                    <div class="error-content">
                        <h3><i class="fa fa-warning text-red"></i> Oops! Something went wrong.</h3>
                        <p>
                            We will work on fixing that right away.
                            Meanwhile, you may <a asp-action="Index" asp-controller="Home">return to dashboard</a>.
                        </p>
                    </div>
                </div><!-- /.error-page -->
            </section><!-- /.content -->
        </div><!-- /.box-body -->
        <div class="box-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2016-2017.</strong> Product of <a href="http://www.rolpo.com">Rolpo</a>
        </div><!-- /.box-footer-->
    </div><!-- /.box -->



</body>
</html>

